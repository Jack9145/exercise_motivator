<div class="mx-auto" style="width:30%;">
  <%= form_with model: @post,url: posts_path,local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object%>
    <div class="mt-4">
      <%= f.text_field :title,placeholder:"タイトル" ,size: "45"%>
    </div>
    <div class="mt-4">
      <%= f.text_area :text,placeholder:"テキスト",size: "45x8",class:"mx-auto" %>
    </div>
    <div class="mt-4">
      <%= f.file_field :image%>
    </div>
    <div class="mt-4">
      <%= f.submit "投稿する" ,class:"btn btn-primary"%>
    </div>
  <% end %>
</div>