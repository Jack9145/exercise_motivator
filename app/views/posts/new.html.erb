<div class="title">新規投稿ページ</div>

<%= form_with model: @post,url: posts_path,local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object%>
  <div class = "ml-5 ">
    <%= f.text_field :title,placeholder:"タイトル" %>
  </div>
  <div class = "ml-5 mt-4">
    <%= f.file_field :image %>
  </div>

  <div class = "ml-5 mt-4">
    <%= f.text_area :text,placeholder:"テキスト" %>
  </div>
  <div class ="ml-5 mt-4">
    <%= f.submit "投稿する"%>
  </div>
<% end %>