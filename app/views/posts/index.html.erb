<div class="ml-5">
  <h1>Posts#index</h1>
  <p>Find me in app/views/pages/index.html.erb</p>
  <div class="card-columns">
    <% @posts.each do |post| %>
      <div class = "card mt-3">
        <div class="card-body">
          <%= image_tag post.image, class: 'message-image' %>
          <h5 class="card-title"><%= post.title%></h5>
          <p class="card-text"><%= post.text%></p>
          <a href="#" class="card-link">詳細</a>
        </div>
      </div>
    <% end %>
  </div>
</div>