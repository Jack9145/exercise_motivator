<div class="ml-5">
  <h1>投稿一覧</h1>
  <div class="card-columns">
    <% @posts.each do |post| %>
      <div class = "card mt-3">
        <div class="card-body">
          <%= image_tag post.image, class: 'message-image' %>
          <h5 class="card-title"><%= post.title%></h5>
          <p class="card-text"><%= post.text%></p>
          <%= post.user.nickname %>
          <%= link_to "詳細", post_path(post.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>