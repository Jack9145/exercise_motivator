<h1>アプデ</h1>

<%= form_with model: @profile ,url: user_profile_path,method: :patch,local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object%>
  <div class = "ml-5 ">
    <%= f.text_field :height ,placeholder: "身長" %>
  </div>
  <div class = "ml-5 mt-4">
    <%= f.text_field :weight ,placeholder:"体重" %>
  </div>
  <div class = "ml-5 mt-4">
    <%= f.text_field :fat_rate ,placeholder:"体脂肪率" %>
  </div>
  <div class ="ml-5 mt-4">
    <%= f.submit "登録する"%>
  </div>
<% end %>