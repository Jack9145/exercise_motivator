<div class="text-center mt-3">
  <h1><%= @user.nickname%>さんのプロフィール</h1>

  <% if @profile.present? %>
  <h3 class="mt-3">
    <strong>身長</strong> : <%= @profile.height %>cm
  </h3>
  <h3 class="mt-3">
    <strong>体重</strong> : <%= @profile.weight %>kg
  </h3>
  <h3 class="mt-3">
    <strong>体脂肪率</strong> : <%= @profile.fat_rate %>%
  </h3>
  <h3 class="mt-3">
    <strong>BMI</strong> : <%= @bmi %>
  </h3>

  <% end %>
  <% if current_user.id == @user.id%>
    <%= link_to "プロフィールを登録する", new_user_profile_path(@user.id) ,class:"btn btn-info mt-4"%>
  <% end %>
</div>